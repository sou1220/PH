<div class="container">
  <div class="row">
    <div class="col">
      <h1>編集フォーム</h1>
      <% if @post.errors.any? %>
        <%= @post.errors.count %>件のエラーが発生しました
        <ul>
          <% @post.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
      <% end %>
      <%= form_with model: @post do |f| %>
        <h4>施設名</h4>
        <%= f.text_field :title %>
        <h4>説明</h4>
        <%= f.text_area :body %>
        <%= f.submit '更新' %>
      <% end %>
      <%= link_to '投稿一覧', posts_path %>
    </div>
  </div>
</div>